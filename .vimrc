syntax on              "turns highlighting on
set nocompatible       "turns off compatibility with vi
set hlsearch           "highlights search pattern matches
set expandtab          "inserts spaces rather than a 'tab' char
set tabstop=4          "set number of spaces used in 'expandtab' command
set shiftwidth=4       "not sure how different from tabstop, but seems pretty cool

  
"netrw options  
"netrw home: www.vim.org/scripts/script.php?script_id=1075

"let g:netrw_liststyle=3      "displays filesystem in tree-mode
"let g:netrw_winsize=35       "explorer fits to 20% of window width
"let g:netrw_browse_split=4   "opens file in previous buffer
